@if (AuthorViewModels is null || !AuthorViewModels.Any())
{
    <div>Daten werden geladen...</div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Name</th>
                <th>Beschreibung</th>
                <th>Geburtsdatum</th>
                <th>Aktion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in AuthorViewModels)
            {
                <tr>
                    <td>
                        <ImageDataUri ImageMimeType="@author.PhotoMimeType"
                                      Image="@author.Photo"
                                      alt="@author.Name">
                        </ImageDataUri>
                    </td>
                    <td>@author.Name</td>
                    <td>@author.Description</td>
                    <td>@(author.BirthDate is not null ? author.BirthDate.Value.ToShortDateString() : "k.A.")</td>
                    <td>
                        <!-- Aktionen -->
                        <a href="" class="btn btn-info"><i class="bi bi-info-circle-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}